@model SinglePostPageViewModel


<div class="row-cols-1">
    @{
        await Html.RenderPartialAsync("_PostView", new SinglePostPartialViewModel { Post = Model.Post, CommentsButton = false});
    }
</div>
<div class="row-cols-1 pt-5">
    <h5>@(Model.CommentsCount == 0 ? "No comments. Be the first!" : $"{Model.CommentsCount} comment(s)")
    </h5>
</div>

