<div class="row mt-4">
    <div class="col">
        <div class="card border-light p-4 bg-primary bg-opacity-10">
            @{
                await Html.RenderPartialAsync("_CommentForm", new CommentaryPartialViewModel() { Commentary = new Commentary(), postId = Model.Post.PostId});
            }
        </div>
    </div>
    <div class="w-100 d-md-none d-block"></div>
    <div class="col mt-4 mt-md-0">
        <div class="row">
            <div class="col">
                @foreach (var com in @Model.Post.Commentaries)
                {
                    <div class="card border-light  border-2  bg-light bg-opacity-10 mb-3">
                        <div class="card-header">
                            <div class="row">
                                <div class="col float-start">
                                    <h4>@com.Username</h4>
                                </div>
                                <div class="col float-end">
                                    <p class="text-end font-weight-light">@com.DateTime.ToString("MMMM dd, yyyy"),
                                        @com.DateTime.ToShortTimeString()</p>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            @com.Text
                        </div>
                        <div class="card-footer p-0">
                            <form method="post" asp-action="DeleteComment" asp-controller="Home" asp-route-commid="@com.CommentaryId">
                                <input name="returnId" type="hidden" value="@Model.Post.PostId">
                                <button class="btn m-2 btn-sm float-end btn-secondary" type="submit"><i class="me-2 fa-solid fa-trash-can"></i>Delete</button>
                            </form>
                        </div>
                    </div>
                }
                @if(Model.CommentsPaginationData != null)
                {
                <pagination pagination-data="@Model.CommentsPaginationData"></pagination>
                }
            </div>
        </div>
