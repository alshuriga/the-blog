@using Blog.Application.Features.ViewModels
@{ Layout = "_AdminLayout"; }
@model UsersListVM
@{
    ViewBag.Header = "Users List";
}
<div asp-validation-summary="All" class="text-danger"></div>
<table class="table table-sm table-bordered table-striped">
    <thead>
    <tr>
        <th>Name</th>
        <th>Emails</th>
        <th>Roles</th>
        <th></th>
        <th></th>
    </tr>
    </thead>

    <tbody>
    <tr>
        <th colspan="5" class="text-center p-3">Basic Users</th>
    </tr>
    @if (!Model.NormalUsers.Any())
    {
        <tr>
            <td colspan="5" class="text-center">No users found</td>
        </tr>
    }
    else
    {
        foreach (var user in Model.NormalUsers)
        {
            <tr>
                <td>@user.Username</td>
                <td>@user.Email</td>
                <td>@string.Join(", ", user.Roles)</td>
                <td class="text-center">
                    <form method="post" asp-action="DeleteUser">
                        <input type="hidden" name="userid" value="@user.Id"/>
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>

                </td>
                <td class="text-center">
                    <form method="post" asp-action="ToggleAdminRole">
                        <input type="hidden" name="userid" value="@user.Id"/>
                        <button type="submit" class="btn btn-sm btn-primary">Assign Admin Rights</button>
                    </form>
                </td>
            </tr>
        }
    }
    <tr>
        <th colspan="5" class="text-center p-3">Admin Users</th>
    </tr>
    @if (!Model.AdminUsers.Any())
    {
        <tr>
            <td colspan="5" class="text-center">No users found</td>
        </tr>
    }
    else
    {
        foreach (var user in Model.AdminUsers)
        {
            <tr>
                <td>@user.Username</td>
                <td>@user.Email</td>
                <td>@string.Join(", ", user.Roles)</td>
                <td class="text-center">
                    <form class="col" method="post" asp-action="DeleteUser">
                        <input type="hidden" name="userid" value="@user.Id"/>
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
                <td class="text-center">
                    <form method="post" asp-action="ToggleAdminRole">
                        <input type="hidden" name="userid" value="@user.Id"/>
                        <button type="submit" class="btn btn-sm btn-secondary">Suspend Admin Rights</button>
                    </form>
                </td>

            </tr>
        }
    }
    </tbody>
</table>