<!DOCTYPE html>
<html>

<head>
    <title>TheBlog</title>
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <environment include="Development,Docker">
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.2.0/js/bootstrap.bundle.min.js"></script>
    </environment>
</head>

<body>
<div class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
        <a asp-action="UserList" class="navbar-brand" bg-s><i class="fa-solid fa-screwdriver-wrench me-2"></i>TheBlog - Admin Panel</a>
        <ul class="navbar-nav me-auto">
            <li class="nav-item ms-1">
                    <a class="nav-link" asp-action="List" asp-controller="Post" asp-route-isdraft="true">Drafts</a>
            </li>
            <li class="nav-item ms-1">
            </li>
        </ul>
        <div class="float-end">
            <partial name="_AuthToolsPartial"/>
        </div>
    </div>
</div>
<div class="container my-5">
    <div class="card text-center text-success p-3 border-success border-1 mb-4 h5 ">@(ViewBag.Header ?? "Admin Panel")</div>
    @RenderBody()
</div>
</body>

</html>