@using Blog.Application.Features.Posts.DTO
@model UpdatePostDTO

<div class="row pt-5"> 
    <p class="display-6">Update post</p>
<form method="post" asp-action="Create">
    <input asp-for="PostId" type="hidden"/>
    <div class="row mt-3">
        <div class="col">
            <label asp-for="Header" class="form-label">Header:</label>
            <input asp-for="Header" class="form-control">
            <small><span asp-validation-for="Header" class="text-danger"></span></small>
        </div>
    </div>
     <div class="row mt-4">
        <div class="col">
            <label asp-for="Text" class="form-label">Text:</label>
            <textarea rows="10" cols="200" asp-for="Text" class="form-control"></textarea>
            <small><span asp-validation-for="Text" class="text-danger"></span></small>
        </div>
    </div>
     <div class="row mt-3">
        <div class="col">
            <label asp-for="TagString" classs="form-label">Tags:</label>
            <input asp-for="TagString" class="form-control">
            <small><span asp-validation-for="TagString" class="text-danger"></span></small>
        </div>
    </div>
         <div class="float-start">
            <a class="btn btn-primary mt-4" asp-action="List">Back</a>
        </div> 
        <div class=" float-end">
            <button class="btn btn-primary mt-4" type="submit" asp-route-asdraft="false">Publish</button>
        </div>
</form>
 </div>
