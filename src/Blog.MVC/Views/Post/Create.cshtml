@using Blog.Application.Features.Posts.DTO
@model CreatePostDTO

<div class="row pt-5">
    <p class="display-6">New post</p>
    <form method="post" asp-action="Create">
        <div class="form-group mt-2">
            <div class="col">
                <label asp-for="Header" class="form-label">Header:</label>
                <input asp-for="Header" class="form-control">
                <small><span asp-validation-for="Header" class="text-danger"></span></small>
            </div>
        </div>
        <div class="form-group mt-2">
            <div class="col">
                <label asp-for="Text" class="form-label">Text:</label>
                <textarea rows="10" cols="200" asp-for="Text" class="form-control"></textarea>
                <small><span asp-validation-for="Text" class="text-danger"></span></small>
            </div>
        </div>
        <div class="form-group mt-2">
            <div class="col">
                <label asp-for="TagString" classs="form-label">Tags:</label>
                <input asp-for="TagString" class="form-control mt-1">
                <small><span asp-validation-for="TagString" class="text-danger"></span></small>
            </div>
        </div>
        <div class="form-group mt-3">
            <div class="form-check">
                <input type="radio" class="form-check-input" asp-for="IsDraft" id="publish" value="false" />
                <label class="form-check-label" for="publish">Publish</label>
            </div>
            <div class="form-check">
                <input type="radio" class="form-check-input" asp-for="IsDraft" id="asdraft" value="true" />
                <label class="form-check-label" for="asdraft">Save as draft</label>
            </div>
        </div>
        <div class="float-start">
            <a class="btn btn-primary mt-4" asp-action="List">Back</a>
        </div>
        <div class=" float-end">
            <button class="btn btn-primary mt-4" type="submit">Save</button>
        </div>
    </form>
</div>
