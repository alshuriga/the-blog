<div class="text-end text-white-50">

    @{
        var returnUrl = $"{Url.Action()}{Context.Request.QueryString}";
    }
    @if (@User.Identity?.IsAuthenticated ?? false)
    {
        <div>
            Logged as <span class="text-white">@User.Identity.Name</span>
            <br/>
            <a class="text-decoration-underline text-white" asp-action="LogOut" asp-controller="Account" asp-route-returnUrl="@returnUrl">Log out</a>
        </div>
    }
    else
    {
        <a class="text-decoration-underline text-white" asp-action="Login" asp-controller="Account" asp-route-returnUrl="@returnUrl">Log in</a>
        @:or
        <a class="text-decoration-underline text-white" asp-action="SignUp" asp-controller="Account" asp-route-returnUrl="@returnUrl">Sign Up</a>
    }
</div>