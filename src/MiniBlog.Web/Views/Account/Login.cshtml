@model UserViewModel

@{
    Layout = "_Layout";
}

<div class="container w-50">

<div class="card py-4 px-5 tex">
    <form method="post" asp-action="Login" asp-route-returnurl="@(ViewBag.returnUrl ?? "")">
        <div asp-validation-summary="All" class="alert alert-danger" hidden="@ViewData.ModelState.IsValid"></div>
        <div class="text-center h4 mb-3">Log In</div>
        <div class="form-group">
            <label class="mb-2" asp-for="Username">Username</label>
            <input asp-for="Username" class="form-control mb-4"/>
        </div>
        <div class="form-group">
            <label class="mb-2" asp-for="Password">Password</label>
            <input asp-for="Password" class="form-control mb-4"/>
        </div>
        <div class="text-center"><button type="submit" class=" btn btn-primary">Log in</button></div>
    </form>
</div>
</div>
