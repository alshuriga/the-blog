@model UserViewModel
@{
    ViewBag.Header = "Create a New User";
}
<form method="post" asp-action="CreateUser">
    <div class="alert alert-danger" asp-validation-summary="All" hidden="@ViewData.ModelState.IsValid"></div>
    <div class="form-group mb-2">
        <label class="mb-2" asp-for="Username">Username</label>
        <input asp-for="Username" class="form-control"/>
    </div>
    <div class="form-group mb-2">
        <label class="mb-2" asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control"/>
    </div>
    <div class="form-group mb-2">
        <label asp-for="Password" class="mb-2">Password</label>
        <input type="password" asp-for="Password" class="form-control"/>
    </div>
    <div class="text-center mt-3">
        <button type="submit" class="btn btn-success mx-1">Create</button> 
        <a class="btn btn-secondary mx-1" asp-action="UserList">Back</a>
    </div>
</form>