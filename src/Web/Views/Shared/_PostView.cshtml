@model PostPartialViewModel

@{
    string cardColor = @Model.IsDraft ? "border-warning" : string.Empty;
}
<div class="card mt-5 @cardColor">
    <div class="card-body p-4 ">
        <div class="row">
            <div class="col">
                 @if (Model.IsDraft)
                {
                    <span><i class="fa-solid fa-pencil me-2 mb-3"></i>Draft</span>
                }
                <a asp-page="SinglePost" asp-route-postid="@Model.Post.Id" class="text-black text-decoration-none"><h2 class="card-title text-truncate">@Model.Post.Header.ToString() 
               
               </h2></a> 
            </div>
            <div class="col">
                <p class="text-end font-weight-light">@Model.Post.DateTime.ToString("MMMM dd, yyyy"),
                    @Model.Post.DateTime.ToShortTimeString()</p>
            </div>
        </div>
        <div class="mt-4">
            <p>@Model.Post.Text </p>
        </div>
    </div>
    <div class="card-footer">
        <div class="row my-1">
            <div class="col-4">
                <h5>
                    @foreach (var tagName in Model.TagNames)
                    {
                        <a asp-page="List" asp-route-draft="@Model.IsDraft" asp-route-tagname="@tagName"
                        class="btn btn-secondary btn-sm text-light text-lowercase mt-2 mb-md-0">@tagName</a>
                    }
                </h5>
            </div>
            <div class="col-8 align-self-top">
                @if (@Model.CommentsButton)
                {
                    <div class="float-end">
                    <a asp-page="SinglePost" asp-route-postid="@Model.Post.Id" class="float-end btn btn-outline-secondary">
                        Comments (@Model.CommentariesCount.ToString())<i class="fa-regular fa-comment-dots ms-2"></i>
                    </a>
                    </div>
                }

                @if (User.IsInRole(RolesConstants.ADMIN_ROLE))
                {
                    <div class="btn-group float-end">
                        <div class="btn btn-outline-secondary dropdown-toggle me-2" data-bs-toggle="dropdown" aria-expanded="false">
                            <span class="me-2">Options</span></div>
                        <ul class="dropdown-menu">
                            <li class="dropdown-item"><a class="btn" asp-page="Editor" asp-route-postid="@Model.Post.Id" class="text-black text-decoration-none">Edit</a></li>
                            <li class="dropdown-item">
                                <form method="post" asp-page="SinglePost" asp-page-handler="DeletePost" asp-route-postid="@Model.Post.Id">
                                    <button type="submit" class="btn">Delete</button>
                                </form>
                            </li>
                        </ul>
                    </div>
                }
            </div>
        </div>
    </div>
</div>