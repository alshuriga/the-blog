<!DOCTYPE html>
<html>

<head>
    <title>TheBlog</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <environment include="Development">
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.2.0/js/bootstrap.bundle.min.js"></script>
    </environment>

</head>

<body>
<div class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
        <a href="/" class="navbar-brand"><i class="fa-solid fa-book me-2"></i>MiniBlog</a>
        <ul class="navbar-nav me-auto">
            @if (User.IsInRole("Admins"))
            {
                <li class="nav-item ms-1">
                    <a class="nav-link text-info" asp-action="UserList" asp-controller="Manage">Admin tools</a>
                </li>

                <li class="nav-item ms-1">
                    <a class="nav-link" asp-action="Create" asp-controller="Post">New Post</a>
                </li>

                <li class="nav-item ms-1">
                    <a class="nav-link" asp-action="List" asp-route-isdraft="true">Drafts</a>
                </li>
            }
        </ul>
        <div class="float-end">
            <partial name="_AuthToolsPartial"/>
        </div>
    </div>
</div>

<div class="container my-5">
    @RenderBody()
</div>
</body>

</html>